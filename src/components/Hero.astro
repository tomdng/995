---
export interface Props {
    title: string;
    callToActionLink: string;
    callToActionText: string;
}

const { title, callToActionLink, callToActionText } = Astro.props;
---
<article class="pl-32">
    <div>
        <h1 class="mb-4 text-black text-8xl font-bold leading-none">{title}</h1>
        <a
            href={callToActionLink}
            class="text-accent underline"
        >
            {callToActionText}
        </a>
    </div>
</article>

<style lang="scss">
    article {
        height: calc(100vh - 72px);
        width: 100%;
        background: url('/assets/hero.jpeg') #fff;
        background-size: cover;
        display: flex;
        align-items: center;
    }

    h1 {
        max-width: 512px;
    }

    a {
        font-size: 24px;
    }
</style>