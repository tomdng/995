---
export interface Props {
    name: string;
    quote: string;
    role: string;
}

const { name, quote, role } = Astro.props;
---

<article>
    <section class="quote">
        <p>{quote}</p>
    </section>

    <section class="author">
        <h2>{name}</h2>
        <p>{role}</p>
    </section>
</article>

<style lang="scss">
    article {
    }

    .quote {
        background: #252525;
        color: #fff;
    }

    .author {
        background: #fff;
        color: #000;
    }
</style>